{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    //"PostgreSQL": "Host=localhost;Port=5432;Database=db_testing;Username=testing;Password=testing"
    //"PostgreSQL": "Host=host.docker.internal;Port=5432;Database=db_testing;Username=testing;Password=testing"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET}",
    "Issuer": "ChatService",
    "Audience": "ChatService",
    "ExpirationMinutes": 60
  },
  "ApiSettings": {
    "MaxConnections": 1000,
    "TimeoutSeconds": 30
  }
}