{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    //"PostgreSQL": "Host=localhost;Port=5432;Database=db_testing;Username=testing;Password=testing"
    //"PostgreSQL": "Host=host.docker.internal;Port=5432;Database=db_testing;Username=testing;Password=testing"
    "PostgreSQL": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD}"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET}",
    "Issuer": "ChatService",
    "Audience": "ChatService",
    "ExpirationMinutes": 60
  },
  "ApiSettings": {
    "MaxConnections": 1000,
    "TimeoutSeconds": 30
  }
}
